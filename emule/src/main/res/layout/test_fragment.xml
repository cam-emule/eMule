<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.cam.cl.emule.TestFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailTo"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="fergus@vap.local" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="This will send an email via the VAP to the address listed" />

        <Button
            android:id="@+id/button_runtest"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:clickable="false"
            android:elevation="5dp"
            android:text="Run Test"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>
